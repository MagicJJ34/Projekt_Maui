<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.ListaZadan"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10" HorizontalOptions="FillAndExpand">

            <Label Text="Lista zadań" FontSize="32" HorizontalOptions="Center" Margin="0,0,0,10"/>

            <Entry x:Name="PoleZadania" Placeholder="Wpisz nowe zadanie" HorizontalOptions="FillAndExpand"/>

            <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="10" HorizontalOptions="FillAndExpand">

                <Button Text="Dodaj zadanie" 
                    Clicked="DodajZadanie_Clicked" 
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"/>

                <Button Text="Wczytaj" 
                    Clicked="WczytajZadania_Clicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand"/>

                <Button Text="Zapisz"
                    Clicked="ZapiszZadania_Clicked"
                    BackgroundColor="LightGray" 
                    TextColor="Black"
                    Grid.Column="2"
                    HorizontalOptions="FillAndExpand"/>

                <Button Text="Pokaż usunięte"
                    Clicked="PokazUsuniete_Clicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Grid.Column="3"
                    HorizontalOptions="FillAndExpand"/>

                <Button Text="Wyczyść wszystkie zadania"
                    Clicked="WyczyscZadania_Clicked"
                    BackgroundColor="LightCoral"
                    TextColor="White"
                    Grid.Column="4"
                    HorizontalOptions="FillAndExpand"/>

            </Grid>

            <CollectionView x:Name="ListaZadanWidok"
                        ItemsSource="{Binding Zadania}"
                        SelectionMode="None">

                <CollectionView.ItemTemplate>

                    <DataTemplate>

                        <HorizontalStackLayout Padding="5" VerticalOptions="Center">

                            <CheckBox IsChecked="{Binding Wykonane}" VerticalOptions="Center"/>

                            <Label Text="{Binding Opis}" 
                            VerticalOptions="Center" 
                            Margin="0,0,10,0" />

                            <Button Text="Usuń"
                            CommandParameter="{Binding .}"
                            Clicked="UsunZadanie_Clicked"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            WidthRequest="70" />
                        </HorizontalStackLayout>

                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>

    </ScrollView>
</ContentPage>
