<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.MainPage"
             Title="">
    
    <Grid Padding="20">

        <Label Text="Witaj w aplikacji do zarządzania listą zadań !" FontSize="32" HorizontalOptions="Center" Margin="0,0,0,10" />

        <StackLayout Orientation="Horizontal"
             HorizontalOptions="Center"
             Margin="0,0,0,50"
             Spacing="30">

            <Button Text="Utwórz nowy plik"
            WidthRequest="250"
            HeightRequest="80"
            FontSize="20"
            CornerRadius="5"
            Clicked="NowyPlik_Clicked" />

            <Button Text="Wczytaj plik"
            WidthRequest="250"
            HeightRequest="80"
            FontSize="20"
            CornerRadius="5"
            Clicked="WczytajPlik_Clicked" />
        </StackLayout>
        
    </Grid>
    
</ContentPage>
