<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Ustawienia"
             Title=" ">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Motyw (Jasny / Ciemny)" />
        <Switch x:Name="SwitchMotyw" />

        <Label Text="Dźwięki" />
        <Switch x:Name="SwitchDzwieki" Toggled="SwitchDzwieki_Toggled" />

        <Label Text="Autozapisywanie" />
        <Switch x:Name="SwitchAutozapis" Toggled="SwitchAutozapis_Toggled" />

        <Button Text="Zapisz ustawienia" Clicked="OnZapiszClicked" />

    </VerticalStackLayout>

</ContentPage>
