<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Ustawienia"
             Title=" ">
    <!-- Utworzenie strony z ułożeniem pionowym-->
    <VerticalStackLayout Padding="20" Spacing="15">
        
        <!-- Opcje do ustawienia-->
        <Label Text="Motyw (Jasny / Ciemny)" />
        <Switch x:Name="SwitchMotyw" />

        <Label Text="Dźwięki" />
        <Switch x:Name="SwitchDzwieki"/>

        <Label Text="Autozapisywanie" />
        <Switch x:Name="SwitchAutozapis"/>

        <Button Text="Zapisz ustawienia" Clicked="OnZapiszClicked" />

    </VerticalStackLayout>

</ContentPage>
